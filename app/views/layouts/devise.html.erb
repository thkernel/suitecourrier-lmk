<!DOCTYPE html>
<html>
  <head>
    <title><%= "#{APPLICATION_NAME} - #{devise_title(controller_name)}" %></title>

    <meta name="viewport" content="width=device-width,initial-scale=1"/>
    <%= csrf_meta_tags %>

    
    <%= stylesheet_pack_tag 'backend', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'backend', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag "backend", "data-turbo-track": "reload" %>
  </head>

  <body>
  	<div class="d-flex align-items-center justify-content-center bg-br-primary ht-100v">
	    <div class="login-wrapper wd-300 wd-xs-350 pd-25 pd-xs-40 bg-white rounded shadow-base">

			<%= render :partial => 'layouts/partials/flash_messages', :flash => flash %>
			<%= yield %>
		</div>
	</div>
  </body>
</html>
