<!DOCTYPE html>
<html>
  <head>
    <% if controller_name == "front" && action_name == "home" %>
      <%= display_meta_tags site: "#{APPLICATION_NAME} | #{APPLICATION_SLOGAN}", charset: "utf-8" %>
      <% else %>
         <%= display_meta_tags site: APPLICATION_NAME, charset: "utf-8", og: { site_name: "#{APPLICATION_NAME}", type: 'website' } %>
    <% end %>

    <meta property="og:image" content="<%= meta_image %>" />
    <meta name="viewport" content="width=device-width,initial-scale=1"/>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- stylesheet_link_tag    'frontend', media: 'all', 'data-turbolinks-track': 'reload' -->
    <!-- javascript_include_tag 'frontend', 'data-turbolinks-track': 'reload' -->

    <%= stylesheet_pack_tag 'frontend', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'frontend', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag "frontend", "data-turbo-track": "reload" %>
    
     <%= javascript_include_tag Ckeditor.cdn_url %>
  </head>

  <body>
   <%= render 'layouts/partials/tawk' %>
    <%= render('layouts/partials/front/header') %>
   

      <div class="page-wrapper">
        <%= render :partial => 'layouts/partials/flash_messages', :flash => flash %>
          <% if controller_name != "front" && action_name != "home" %>
         
          <% end %>
          <%= yield %>
      </div>
    <%= render('layouts/partials/front/footer') %>
  </body>
</html>
