 <% @tasks.each do |task| %>
      <tr>
              <td><%= task_type(task.task_type_id).name %></td>

        <td><%= task.title %></td>
       
        
       
        <td>
					<div class="action-buttons">
					<%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'),  edit_task_path(task), title: "Modifier", remote: true %>




<%= link_to raw('<i class="far fa-trash-alt"></i>
'), task_delete_path(task), remote: true, title: "Supprimer", class: "delete" %>
</div>
</td>

      </tr>
    <% end %>